[app]
title = Dot Column Game
package.name = dotcolumn
package.domain = org.yourname
version = 0.1

# Directory where your source code lives (usually current directory)
source.dir = .

# File extensions to include from source.dir
source.include_exts = py,png,jpg,kv,atlas

# Main Python file to run (change if different)
source.main = main.py

# Requirements for your app
requirements = python3,kivy,cython

# Screen orientation and fullscreen mode
orientation = portrait
fullscreen = 1

# iOS specific options (you can keep default for now)
ios.kivy_ios_url = https://github.com/kivy/kivy-ios
ios.kivy_ios_branch = master
